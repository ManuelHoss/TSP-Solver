<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TSPSolver.Views.BestRouteDetailView">
  
  <StackLayout>
    <ListView x:Name="AddressListView"
              HasUnevenRows="True"
              VerticalOptions="FillAndExpand" HorizontalOptions="StartAndExpand"
              ItemsSource="{Binding OrderedAddresses}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Street}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    
    <Label Text="{Binding Distance, StringFormat='Distance of the best route found: {0} meters.'}" VerticalOptions="Center" HorizontalOptions="Center" />
  </StackLayout>
</ContentPage>