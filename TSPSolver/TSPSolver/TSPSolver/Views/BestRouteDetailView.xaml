<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="TSPSolver.Views.BestRouteDetailView">
  
  <StackLayout x:Name="StackLayout">
    <maps:Map HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
            x:Name="BestRouteMap"
            IsShowingUser="false"
            MapType="Hybrid"/>
    
    <Label Text="{Binding Distance, StringFormat='Distance of the best route found: {0} meters.'}" VerticalOptions="Center" HorizontalOptions="Center" />
  </StackLayout>
</ContentPage>